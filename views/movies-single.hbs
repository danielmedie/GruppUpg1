<h2>{{title}} {{gengre}}</h2>

<form action="/movies/{{id}}/update" method="post">
    <input type="text" name="title" placeholder="Title" value="{{title}}"> <br>
    <input type="text" name="gengre" placeholder="Gengre" value="{{gengre}}"> <br>
    <input type="text" name="description" placeholder="Description" value="{{description}}"> <br>

    <input type="submit" value="Save">
</form>

<form action="/movies/{{id}}/delete" method="post">
    <input type="submit" value="Delete">
</form>